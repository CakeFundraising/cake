- if sponsors.any?
  table#sponsors.table.table-hover.table-bordered.data-table
    thead
      tr
        th = Sponsor.model_name.human
        th = Sponsor.human_attribute_name :pledges_quantity
        th = t('semantic.average', model:'Donation')
        th = t('semantic.average', model:'Pledge')
        th = t('semantic.average', model:'Donation/Click')
        th = t('semantic.average', model:'Clicks')
        th = t('semantic.average', model:'Reach')
        th = t('semantic.average', model:'Conv. Rate')
        th = t('semantic.average', model:'Pledge Rank')
    tbody
      = render partial:'sponsors/show/table_row', collection: sponsors, as: :sponsor, locals:{fr: fr}
- else
  = render partial:'layouts/no_results', locals:{object: t('titles.empty_results.sponsors')}