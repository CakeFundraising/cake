- if pledge.campaign.launched? and pledge.accepted?
  - if pledge.fully_subscribed?
    button.btn.btn-warning.btn-xl.disabled Pledge fully subscribed
  - else
    div.text-center
      .main-cta
        - if session[:browser_id].present?
          - if pledge.click_browsers.include?(current_browser)
            = link_to 'Thanks! Visit our Sponsor Again.', pledge.website_url, target: :_blank, class:'btn btn-success btn-xl'
          - else
            #buttons_section
              = link_to "Click to Help. It's Free!", click_pledge_path(pledge, browser_id: session[:browser_id]), method: :patch, target: :_blank, class:'btn btn-success btn-block btn-xl click_link'
            = render partial:'clicks/success_modal'
        - else
          / Browser not registered.
          = link_to "Click to Help. It's Free!", url_for(params), class: 'btn btn-success btn-xl no_browser_link'

