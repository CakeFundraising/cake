= semantic_form_for @quick_pledge do |f|
  = f.semantic_errors *f.object.errors.keys
  = f.inputs do
    .row
      .col-md-6
        = f.input :name
        - if f.object.new_record?
          = f.input :campaign, as: :select, collection: current_fundraiser.campaigns.not_hero.active
        - else
          label.control-label Campaign: 
          h4 = auto_link f.object.decorate.campaign
        = f.input :amount_per_click, input_html:{width:'50%', placeholder: '5.00', class: 'default-zero'}, :prepend => '$'
        = f.input :total_amount, input_html:{placeholder: '10,000', class: 'default-zero'}, :prepend => '$'
        = f.input :website_url, label: 'Please direct all web traffic to the Sponsor\'s website', placeholder: 'Enter your URL here...', input_html: { :size => "60" }
        br
        = f.input :terms, as: :boolean, :label => 'The Sponsor has authorized this pledge' if f.object.new_record?
        = f.input :sponsor_id, as: :hidden
        = f.input :sponsor_type, as: :hidden
      .col-md-6
        = render partial:'pictures/avatar_form', locals:{f: f}
        .help-block I am authorized to use this image.
  = f.actions do
    .row.section-wrapper.text-center
      br
      = link_to t('semantic.cancel'), quick_pledges_path, class:'btn btn-default btn-lg pad-right'
      = f.action :submit, label: 'Save', button_html: {class: 'btn btn-success btn-lg'}
      
