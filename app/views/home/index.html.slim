= display_meta("Homepage")

= content_for :header do 
  - cache [:home, :header] do
  	.banner.hero-home
      .home
        .hero-home
          section.main-banner.text-center
            h1.boldest Create Powerful Win/Win Social Media Partnerships in Minutes!
          .how_it_works
            a.btn.btn-success.btn-sm#how_it_works_btn data-toggle='collapse' data-target='#home_videos' See How It Works
          .container.collapse#home_videos
            .row.vertical-align.wrap
              .intro_video
                section.main-banner.text-center
                  h3.boldest Raise Money For A Good Cause
                  a.btn data-toggle='modal' data-target='#home_video_fr'
                    = image_tag 'https://img.youtube.com/vi/_zEtobIg5W8/mqdefault.jpg', class:'vid-thumb'
                    .center-play
                      = image_tag 'play_video.png', class:'play-btn'
              .learn-more
                section.main-banner.text-center
                  = link_to 'Learn More', help_page_path('faq'), class:'btn btn-primary btn-md learn-more'
              .intro_video
                section.main-banner.text-center
                  h3.boldest Promote Your Business
                  a.btn data-toggle='modal' data-target='#home_video_sp'
                    = image_tag 'https://img.youtube.com/vi/cgd5AZoJR70/mqdefault.jpg', class:'vid-thumb'
                    .center-play
                      = image_tag 'play_video.png', class:'play-btn'
  		
  		= render partial:'home/home_video'
  			
  	.secondary-navbar
      ul.nav.nav-pills.popular
        li.active
          a data-toggle="tab" id="tab-campaigns" href="#pop-campaigns"
            span Campaigns Seeking Sponsors
        li
          = home_tab_button(:sponsor, 'All Sponsors')
        li
          = home_tab_button(:fundraiser, 'All Causes')
        li
          = home_tab_button(:cakester, 'All Cakesters')
        li
          = home_tab_button(:campaign_commission, 'Commissions')
        li
          = home_tab_button(:coupon, 'Best Discounts')
								
