.row
  .search-sidebar.col-md-3.hidden-xs.hidden-sm
    - cache [:search_sidebar, :coupons] do
      = render 'home/search/search_form', collection: :cakesters
      #filters.panel-group
        ul.cats
          - Cakester::CAUSES_HIERARCHY.each do |group|
            h4 = t("titles.causes.#{group.first}")
            - group.last.each do |cause|
              li = link_to cause, search_cakesters_path(causes: cause)
  .col-md-9.col-xs-12
    .cakesters-container.row-fluid.transitions-enabled
      .cakesters
        - if @collection.any?
          = render partial: "cakesters/show/grid", collection: @collection, as: :cakester
          .row
            .col-md-12.col-sm-12.col-xs-12
              = link_to "See All Our Cakesters", search_cakesters_path, class:'btn btn-primary btn-md'
        - else
          .alert.alert-info No results found.