#hero_campaign_video.modal.fade.video_modal
  .modal-dialog.modal-lg
    .modal-content
      .modal-header 
        button.close aria-hidden="true" data-dismiss="modal" type="button" &times;
        h2.modal-title How Cake works - Single-Sponsor Hero Campaign
      .modal-body
        iframe id="hero_campaign_video_iframe" class="youtube_video" title="YouTube video player" width="100%" height="400px" src="//www.youtube.com/embed/SUKPl708lhU?theme=light" frameborder="0" allowfullscreen
    /! /.modal-content
  /! /.modal-dialog
/! /.modal

javascript:
  var yt_init = function(){
    Cake.videos.youtube({
      modal: '#hero_campaign_video',
      provider: 'youtube',
      iframeId: "hero_campaign_video_iframe",
      autoshow: true
    });
  };

  if(window.YT){
    yt_init();
  }else{
    Cake.videos.youtubeApi();
    Cake.videos.queueFunctions(yt_init);
  }